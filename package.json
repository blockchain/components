{
  "name": "blockchain-info-components",
  "version": "0.0.1",
  "description": "Blockchain.com components library",
  "main": "src/index.js",
  "scripts": {
    "start": "start-storybook -p 6006",
    "build": "build-storybook",
    "test": "jest --notify --watch",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "ci:test": "jest --no-cache",
    "lint:js": "eslint 'src/**/*.js'",
    "lint:js:fix": "eslint 'src/**/*.js' --fix",
    "prettier:fix": "prettier --write 'src/**/*.js'"
  },
  "author": "Blockchain",
  "license": "AGPLv3",
  "husky": {
    "hooks": {
      "pre-commit": "npm run ci:test",
      "pre-push": "npm run ci:test"
    }
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.6",
    "@storybook/addon-backgrounds": "^3.4.6",
    "@storybook/addon-info": "^3.4.6",
    "@storybook/addon-notes": "^3.4.6",
    "@storybook/cli": "^3.4.6",
    "@storybook/react": "^3.4.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.2.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "identity-obj-proxy": "^3.0.0",
    "istanbul": "^0.4.5",
    "istanbul-coveralls": "^1.0.3",
    "jest": "^23.2.0",
    "polished": "^1.9.2",
    "prettier": "^1.13.7",
    "prop-types": "^15.6.1",
    "ramda": "^0.25.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "styled-components": "^3.3.2"
  },
  "sideEffects": false,
  "peerDependencies": {
    "polished": "1.9.2",
    "prop-types": "15.6.1",
    "ramda": "0.25.0",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "styled-components": "3.3.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/coverage/blockchain-wallet-v4",
    "coverageReporters": [
      "json",
      "html"
    ],
    "moduleNameMapper": {
      "\\.(pdf|jpg|jpeg|png|gif|eot|otf|svg|ttf|woff|woff2)$": "<rootDir>/node_modules/identity-obj-proxy",
      "\\.(css|scss)$": "<rootDir>/node_modules/identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/config/jest/jest.config.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "dependencies": {
    "babel-eslint": "^8.2.5",
    "eslint-plugin-standard": "^3.1.0",
    "standard": "^11.0.1"
  }
}
